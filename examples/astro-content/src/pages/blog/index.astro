---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Hero from "../../components/Hero.astro";

export interface Props {
  title: string;
  subtitle?: string;
}

const { title = "Blog", subtitle = "Nested route: /blog" } = Astro.props;
---
<BaseLayout title="Blog">
  <Hero title={title} subtitle={subtitle} />
  <ul>
    <li><a href="/blog/hello-world">hello-world.md</a></li>
    <li><a href="/blog/nested">nested/index.mdoc</a></li>
    <li><a href="/legal/privacy">legal/privacy.markdown</a></li>
  </ul>
</BaseLayout>
